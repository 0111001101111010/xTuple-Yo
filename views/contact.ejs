  </head>
  <body>
    <blink><h1>xTuple Move-Your-Car</h1></blink>
  <div class="pure-g">
    <% for(var i = 0; i < contacts.length; i++) { %>
    <%if (i % 2 ==0) { %>
      <div class="pure-u-1 orange">
    <% } %>
    <%else{ %>
      <div class="pure-u-1 blue">
    <% } %>
      <p class="name">Name: <%= contacts[i].firstName + " " + contacts[i].lastName %>
      <br>
      <label for="phone">Phone:</label>
      <p class="phone"><%= contacts[i].phone %></p>
      <input type="button" value="notify" id="tap">
      <hr>
    </div>
    <% } %>
  </div>
  </body>
  <script src="js/client.js"></script>
</html>
